{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@packages/shared": ["../../packages/shared/src"],
      "@packages/backend": ["../../packages/backend"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
