#!/bin/sh
set -e

# Husky commit-msg hook for conventional commits validation
# Ensures commit messages follow the Conventional Commits specification

COMMIT_MSG_FILE=$1

# Read the commit message
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Conventional Commits regex pattern:
# type(scope)?: description
# Allowed types: feat, fix, docs, style, refactor, test, chore, perf, ci, build
COMMIT_PATTERN='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build)(\(.+\))?: .+$'

# Skip validation for merge commits
if echo "$COMMIT_MSG" | grep -q "^Merge"; then
  echo "✅ Merge commit detected - skipping validation"
  exit 0
fi

# Skip validation for revert commits
if echo "$COMMIT_MSG" | grep -q "^Revert"; then
  echo "✅ Revert commit detected - skipping validation"
  exit 0
fi

# Validate commit message format
if ! echo "$COMMIT_MSG" | grep -E "$COMMIT_PATTERN" > /dev/null; then
  echo "❌ Commit message does not follow Conventional Commits format"
  echo ""
  echo "Expected format:"
  echo "  type(scope): description"
  echo ""
  echo "Allowed types: feat, fix, docs, style, refactor, test, chore, perf, ci, build"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add OAuth login support"
  echo "  fix(api): resolve race condition in cache"
  echo "  docs: update README with setup instructions"
  echo ""
  exit 1
fi

echo "✅ Commit message follows Conventional Commits format"
