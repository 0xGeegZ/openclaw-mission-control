{
  "name": "openclaw-mission-control",
  "private": true,
  "scripts": {
    "dev:local": "(cd packages/backend && npx convex dev) & (cd apps/web && npm run dev) & wait",
    "dev:runtime": "cd apps/runtime && npm run docker:up:openclaw",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web-app --filter=@packages/backend",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=@packages/shared",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "3.7.4",
    "turbo": "2.8.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.1"
}
