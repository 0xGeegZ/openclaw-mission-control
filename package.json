{
  "name": "mission-control",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web-app --filter=@packages/backend",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=@packages/shared",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "3.7.4",
    "turbo": "2.6.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.1",
  "dependencies": {
    "@packages/backend": "^1.0.0",
    "@packages/ui": "^0.1.0",
    "convex": "^1.31.7",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4"
  }
}
