{
  "name": "openclaw-mission-control",
  "private": true,
  "scripts": {
    "dev": "(cd packages/backend && npx convex dev) & (cd apps/web && npm run dev) & wait",
    "dev:openclaw": "cd apps/runtime && npm run docker:up:openclaw",
    "dev:turbo": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=@packages/shared",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "3.7.4",
    "turbo": "2.8.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.1",
  "dependencies": {
    "@packages/backend": "^1.0.0",
    "@packages/shared": "^0.1.0",
    "@packages/ui": "^0.1.0",
    "convex": "^1.31.7",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "sonner": "^2.0.7"
  }
}
