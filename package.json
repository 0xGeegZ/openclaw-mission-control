{
  "name": "openclaw-mission-control",
  "private": true,
  "scripts": {
    "dev": "(cd packages/backend && npm run dev) & (cd apps/web && npm run dev) & wait",
    "dev:openclaw": "cd apps/runtime && npm run docker:up:openclaw",
    "dev:turbo": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=@packages/shared",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "test:all": "turbo run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "turbo": "2.8.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.57.1",
    "@tailwindcss/oxide-linux-x64-gnu": "4.1.18",
    "lightningcss-linux-x64-gnu": "1.30.2"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.6.1",
  "dependencies": {
    "@packages/backend": "^1.0.0",
    "@packages/shared": "^0.1.0",
    "@packages/ui": "^0.1.0",
    "convex": "^1.31.7",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "sonner": "^2.0.7",
    "usehooks-ts": "^3.1.1"
  }
}